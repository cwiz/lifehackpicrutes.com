extends base

block content
    .container

        .page-header
            h1 Все категории

        .categories
            each row in rows
                .row
                    for tag in row
                        .span3
                            ul
                                li.category
                                    h1
                                        a(href!='{% url category tag.id %}')=tag.name
 
                                each child in tag.tag_set.all
                                    li
                                        a(href!='{% url category child.id %}')!=child.name
