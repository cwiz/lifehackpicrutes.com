extends base

block content
    .container
        ul.breadcrumb
            li
                a(href!="{% url categories %}") Все категории
                span.divider

            if category.parent_tag
                li
                    a(href!="{% url category category.parent_tag.id %}")=category.parent_tag.name
                    span.divider

            li.active
                =category.name

        .page-header
            h1=category.name
        
        #images
            each image in images
                .wallItem
                    a(href!='{% url lifehack image.id %}')
                        div
                            h5=image.name
                        img(src=image.thumbnail)

